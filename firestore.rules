rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow read/write access only for authenticated users.
    // For production, you should secure this further based on your app's logic.
    // e.g., match /users/{userId}/{documents=**} {
    //         allow read, write: if request.auth.uid == userId;
    //       }
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
